# Stage 0, "build-stage", based on Node.js, to build and compile the frontend
FROM tiangolo/node-frontend:10 as build-stage

WORKDIR /app

RUN mkdir client

COPY client/src/ client
COPY client/public/ client
COPY client/src/contracts/ client
COPY client/package.json client
COPY client/config-overrides.js client

RUN cd client && npm install

# Stage 1, based on Nginx, to have only the compiled app, ready for production with Nginx
FROM nginx:1.15

COPY --from=build-stage /app/client/build/ /usr/share/nginx/html

# Copy the default nginx.conf provided by tiangolo/node-frontend
COPY --from=build-stage /app/client/nginx.conf /etc/nginx/conf.d/default.conf

COPY client/build /usr/share/nginx/html
